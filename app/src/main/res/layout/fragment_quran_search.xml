<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_dark"
    android:orientation="vertical"
    tools:context=".ui.Quran.quranSearch.QuranSearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@null"
            android:padding="8dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="25dp">

            <EditText
                android:id="@+id/quran_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:gravity="center|right"
                android:padding="8dp"
                tools:ignore="RtlHardcoded,TouchTargetSizeCheck" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quran_search_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/list_item_quran_search" />

<!--    #4C4F53-->
</LinearLayout>